<body>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <div class="logo">
                <a href="index.html">
                    <img src="~/Images/Logo.png" alt="" class="img-fluid">
                    <span class="text-black h5">El Mandadito Express</span>
                </a>
            </div>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a class="nav-link scrollto active" href="#hero">Inicio</a></li>
                    <li><a class="nav-link scrollto" href="#about">Acerca de</a></li>
                    <li><a class="nav-link scrollto" href="#services">Servicios</a></li>
                    <li><a class="nav-link scrollto" href="#clients">Clientes</a></li>
                    <li><a class="nav-link scrollto" href="#contact">Contáctanos</a></li>
                    <li><a class="nav-link scrollto" href="@Url.Action("Create","Clientes")" target="_blank">Registrarse</a></li>
                    <li><a class="getstarted scrollto btn btn-success" href="@Url.Action("Login","Account")" target="_blank">Entrar</a></li>
                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->

        </div>
    </header><!-- End Header -->
    <!--Main Views-->
    @RenderBody()

    <!-- ======= Footer ======= -->
    <footer id="footer">

        <div class="footer-newsletter">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <h4>Recuerda...</h4>
                        <cite>
                            Somos la mejor opción para realizar tus envíos y gestiones.
                        </cite>

                    </div>
                </div>
            </div>
        </div>

        <div class="footer-top">
            <div class="container">
                <div class="row justify-content-center">

                    <div class="col-lg-3 col-md-6 footer-contact">
                        <h3>El Mandadito Express</h3>
                        <p>
                            Colonia Miguel Bonilla <br>
                            Managua-Nicaragua<br>
                            <br>
                            <strong>Teléfono:</strong> +505 7799 9885<br>
                            <strong>Correo:</strong> elmandaditoexpressni@gmail.com<br>
                        </p>
                    </div>

                    <div class="col-lg-3 col-md-6 footer-links">
                        <h4>Enlaces Útiles</h4>
                        <ul>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Create","Clientes")" target="_blank">Registrarse</a></li>
                            <li><i class="bx bx-chevron-right"></i> <a href="@Url.Action("Create","Cotizaciones")" target="_blank">Cotizar</a></li>
