<template id="modal-template-header">
    <div class="modal-header" data-bind="class: ModalHeaderClass">
        <h5 class="modal-title" data-bind="text: ModalTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</template>


<template id="modal-body-template">
    <!--ko with:TemplateViewModel-->
    <div class="modal-body" data-bind="template: { name: Name, data: Data }"></div>
    <!--/ko-->
</template>


<template id="modal-template-footer">
    <div class="modal-footer">

        @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "modal-form-foot" }))
        {
            @Html.AntiForgeryToken();
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-close"></i> Cerrar</button>

            <button type="button" data-bind="click: $root.GuardarCambios, attr:{ href: UrlAction}" class="btn btn-primary">
                <i class="fa fa-check"></i>
                <span data-bind="text:ActionName"></span>
            </button>
        }
    </div>

</template>


<template id="modal-template">
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true"
         data-bind="attr: { id: ModalId }">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <!--ko with: ModalHeaderViewModel-->
                <modal-header params="{ ModalHeaderViewModel:  $data }"></modal-header>
                <!--/ko-->
                <!--ko with: ModalBodyViewModel-->
                <modal-body params="{ ModalBodyViewModel:  $data }"></modal-body>
                <!--/ko-->
                <!--ko with: FooterViewModel-->
                <modal-footer params="{ FooterViewModel: $data }"></modal-footer>
                <!--/ko-->
            </div>
        </div>
    </div>
</template>