    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyDmKbJfbvqtbp9AoRjEAn-90N75Wa2CdIg"></script>
    @Scripts.Render("~/plugins/locationpicker")
    @Scripts.Render("~/plugins/switch")
    @Scripts.Render("~/plugins/knockout")
    @Scripts.Render("~/plugins/moment")
    @Scripts.Render("~/plugins/sweetalert")
    <script src="~/Scripts/knockout/knockout.mapping.js"></script>
    <script src="~/Scripts/plugins/jquerymask/jquery.mask.js"></script>
    @Scripts.Render("~/plugins/sparkline")
    @Scripts.Render("~/plugins/notify")
    <script src="~/Scripts/plugins/select2/select2.js"></script>

    <script type="text/javascript">

    function IndexEnvioViewmodel(initialData) {
        const self = this;

        //formatear la fecha.
        let fechaFormatted = formatDate(initialData.FechaDelEnvio())
        initialData.FechaDelEnvio = fechaFormatted;

        self.Envio = ko.observable(initialData);
        self.Envio().Servicios.push({ Id: -1, DescripcionDelServicio: "Otro" });//insert default option

        self.MostrarMonto = ko.observable(false);
        self.MostrarBtnAlCredito = ko.observable(self.Envio().TieneCredito());
        self.IsInvalidLocation = ko.observable(false);
        self.CargandoSolicitud = ko.observable(false);
        self.FiltrandoServicios = ko.observable(false);
        self.NeedAddNewService = ko.observable(false);

        self.DefaultOrigenLatitud = ko.observable(self.Envio().DistanciaEntregaRecep() > 0 ? self.Envio().LugarOrigen.Latitud() : '12.128145869138876');
        self.DefaultOrigenLongitud = ko.observable(self.Envio().DistanciaEntregaRecep() > 0 ? self.Envio().LugarOrigen.Longitud() : '-86.26501267501537');
        self.DefaultDestinoLatitud = ko.observable(self.Envio().DistanciaEntregaRecep() > 0 ? self.Envio().LugarDestino.Latitud() : '12.128145869138876');
        self.DefaultDestinoLongitud = ko.observable(self.Envio().DistanciaEntregaRecep() > 0 ? self.Envio().LugarDestino.Longitud() : '-86.26501267501537');

        self.MostrarSwitchDebeRecibirDinero = ko.computed(function () {
            return self.Envio().DebeRegresarATienda();
        });

        self.MostrarMontoDineroRecibeMotorizado = ko.computed(function () {
            return self.Envio().DebeRecibirDinero();
        });

        self.MostrarMontoCambio = ko.computed(function () {
            return self.Envio().DebeRecibirCambio();
        });

        self.EnvioMedianteCotizacion = ko.observable(self.Envio().CotizacionId() > 0 ? true : false);
        self.BlockLugares = ko.observable((self.EnvioMedianteCotizacion() && self.Envio().TipoDeServicioId() != 3) ? "disabledLugares" : null);

        self.Envio().DebeRegresarATienda.subscribe(function (debeRegresarATienda) {
            //poner a false los campos que dependen de este, cuando debe recibir dinero sea false
            if (!debeRegresarATienda) {
                self.Envio().DebeRecibirDinero(false);
                self.Envio().MontoARecibir(0);
                self.Envio().DebeRecibirCambio(false);
                self.Envio().MontoCambio(0);
            }
        });

        self.Envio().TipoDeServicioId.subscribe(function (valor) {
            if (valor) {
                getServiciosFiltrados(valor);

                //mostrar el campo monto si son gestiones bancarias
                if (valor == self.Envio().GestionBancariaId())
                    self.MostrarMonto(true);
                else {
                    self.MostrarMonto(false);
                    //self.Envio().MontoDeDinero(0);
                }

                //sea el tipo de servicio que sea reiniciar la informacion con cada cambio
                self.Envio().MontoDeDinero(0);
                self.Envio().DistanciaEntregaRecep(0);
                self.Envio().MontoTotalDelEnvio(0);

            }
        });

        self.Envio().ServicioId.subscribe(function (valor) {
            if (valor) {
                if (ko.unwrap(valor) == -1) {
                    self.NeedAddNewService(true);
                }
                else {
                    self.NeedAddNewService(false);
                    self.Envio().Servicio.DescripcionDelServicio("");
                }
            }
        });

        self.CalcularDistancia = ko.computed(function () {

                if (self.Envio().LugarOrigen.Latitud() && self.Envio().LugarOrigen.Longitud() && self.Envio().LugarOrigen.Direccion() &&
                    self.Envio().LugarDestino.Latitud() && self.Envio().LugarDestino.Longitud() && self.Envio().LugarDestino.Direccion()) {

                    let origen = new google.maps.LatLng(self.Envio().LugarOrigen.Latitud(), self.Envio().LugarOrigen.Longitud());
                    let destino = new google.maps.LatLng(self.Envio().LugarDestino.Latitud(), self.Envio().LugarDestino.Longitud());

                    CalcularDistancia(origen, destino);
                }
        });

        self.InicializarMapas = function () {
            InicializarMapaOrigen();
            InicializarMapaDestino();
        }

        self.CalcularMonto = function (data, event) {
            event.preventDefault();

            if ($('.frmEnvio').valid()) {
                if (data.DistanciaEntregaRecep() > 0) {
                    $.ajax(
                        {
                            url: "@Url.Action("CostoDelEnvio", "Envios")",
                            type: "Get",
                            data: { TipoDeServicioId: data.TipoDeServicioId(), Fecha: data.FechaDelEnvio, Distancia: data.DistanciaEntregaRecep(), Urgente: data.EsUrgente(), MontoGestion: data.MontoDeDinero() },
                            beforeSend: function () {
                                //mostrar informacion de que se esta haciendo la peticion
                                self.CargandoSolicitud(true);
                            },
                            success: function (response) {
                                if (response.exito) {
                                    self.Envio().MontoTotalDelEnvio(response.data);
                                }
                                else {
                                    $.notify({
                                        icon: 'fa fa-exclamation-circle',
                                        message: response.message
                                    });
                                    self.Envio().MontoTotalDelEnvio(0);//si es false, resetear el monto a 0
                                }
                            },
                            error: function (e) {
                                $.notify({
                                    icon: 'fa fa-exclamation-circle',
