                                                @Html.LabelFor(model => model.TipoDePagoId, htmlAttributes: new { @class = "control-label font-weight-bold" })
                                                <select class="form-control" name="TipoDePagoId" data-bind="options:( ko.unwrap(TiposDePago()).length > 0 ? TiposDePago : [{Descripcion:'Sin registros'}] ), optionsText:'Descripcion',optionsValue:'Id', value:TipoDePagoId" required title="El campo es obligatorio"></select>
