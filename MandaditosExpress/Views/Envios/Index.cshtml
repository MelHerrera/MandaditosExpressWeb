@using MandaditosExpress.Models.Enum
@model IEnumerable<MandaditosExpress.Models.Envio>

@{
    ViewBag.Title = "Envios";
}

@section Styles{
    <link href="~/Content/plugins/checkbox/magic-input.min.css" rel="stylesheet" />
}

<div class="row m-2">
    <div class="col-md-12">
        <a class="btn btn-success float-left" href="@Url.Action("Create","Envios")"><i class="fa fa-plus"></i> Solicitar Envío</a>
    </div>
</div>

@if (Model.Count() > 0)
{
    <div class="align-items-center pb-lg-5">
        <div class="row">
            <div class="col-md-12">
                <div class="row justify-content-center">
                    @foreach (var item in Model)
                    {
                        <div class="card w-25 my-2 mx-2 p-0">
                            <div class="card-body">
                                <div class="ibox m-0">
                                    <div class="row">
                                        <div class="col-md-6 pb-0">
                                            <label class="font-weight-bold form-label">Monto Total</label>
                                            <div class="form-group">
                                                <small class="h4"><i class="fa fa-money"></i> @item.MontoTotalDelEnvio</small>
                                            </div>
                                        </div>
                                        <div class="col-md-4 float-right text-center m-0">
                                            <img src="~/Images/Logo.png" style="width:70%" />
                                        </div>
                                    </div>

                                    <hr class="m-0" />

                                    <div class="row">
                                        <div class="col-md-2 mt-2 ml-2 text-center align-self-center">
                                            <i class="fa fa-dot-circle-o fa-2x"></i>
                                        </div>
                                        <div class="col-md-9 mt-1 px-0 text-center align-middle">
                                            <small>@item.LugarOrigen.Direccion</small>
                                        </div>

                                    </div>
                                    <div class="row mt-3">
                                        <div class="col-md-2 mt-2 ml-2 text-center align-self-center">
                                            <i class="fa fa-map-marker fa-2x"></i>
                                        </div>
                                        <div class="col-md-9 mt-1 px-0 text-center align-middle">
                                            <small>@item.LugarDestino.Direccion</small>
                                        </div>

                                    </div>

                                    <hr class="m-1" />

                                    <div class="row">
                                        <div class="col-md-8">
                                            <label class="font-weight-bold form-label m-0">Cliente</label>
                                            <div class="form-group m-0">
                                                <small>@item.Cliente.NombreCompleto</small>
                                            </div>
                                        </div>
                                        <div class="col-md-4 ">
                                            @if (item.EstadoDelEnvio == (short)EstadoDelEnvioEnum.Solicitud)
                                            {
                                                <span class="badge badge-success">@EstadoDelEnvioEnum.Solicitud.ToString()</span>
                                            }
                                            @if (item.EstadoDelEnvio == (short)EstadoDelEnvioEnum.EnProceso)
                                            {
                                                <span class="badge badge-info">En Proceso</span>
                                            }
                                            @if (item.EstadoDelEnvio == (short)EstadoDelEnvioEnum.Realizado)
                                            {
                                                <span class="badge badge-warning">@EstadoDelEnvioEnum.Realizado.ToString()</span>
                                            }
                                            @if (item.EstadoDelEnvio == (short)EstadoDelEnvioEnum.Rechazado)
                                            {
                                                <span class="badge badge-danger">@EstadoDelEnvioEnum.Rechazado.ToString()</span>
                                            }
                                        </div>
                                    </div>

                                    <div class="row">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <div class="col-sm-6 align-self-center">
                                                <div class="form-group align-self-center">
                                                    <label for="check_finalizar" class="font-weight-bold">Finalizar</label>
                                                    <input type="checkbox" class="mgc-switch mgc-sm align-middle chk" id="check_finalizar" _data-bind="checked:$root.FinalizarChecked" />
                                                </div>
                                            </div>
                                        }

                                        <div class="col-md-6">
                                            <div class=" btn-group float-right">
                                                @if (User.IsInRole("Admin"))
                                                {
                                                    <a class="btn btn-danger" href="#" data-bind="click:function(data,event){$root.Rechazar(data, event, @item.Id)}"><i class="fa fa-times-circle" title="Rechazar Envío"></i></a>
                                                    <a class="btn btn-primary" href="@Url.Action("Asignacion", new { id = item.Id })"><i class="fa fa-link" title="Asignar Motorizado"></i></a>
                                                }
                                                <a class="btn btn-warning" href="@Url.Action("Details", new { id = item.Id })"><i class="fa fa-info-circle" title="Detalles"></i></a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-Empty mt-3" role="alert">
        Se encontraron 0 Envios <a href="@Url.Action("Create")" class="alert-link">Click aqui</a>. Para solicitar uno.
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/knockout")
    @Scripts.Render("~/plugins/sweetalert")

    <script>
        $(function () {
            ko.applyBindings(new IndexEnvio());
        });

        $('.chk').on('click', function () {
            if ($(this).is(':checked')) {
                Swal.fire({
                    title: '¿Esta seguro(a) que desea finalizar este envío?',
                    text: "!Esta acción no es reversible!!!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Sí, Finalizarlo!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax(
                            {
                                url: "/Envios/FinalizarEnvio",
                                type: "Post",
                                data: { EnvioId:  },
                                beforeSend: function () {
                                    self.CargandoSolicitud(true);
                                },
                                success: function (response) {
                                    if (response.exito) {
                                        Swal.fire({
                                            icon: 'success',
                                            text: response.message
                                        }).then(() => {
                                            window.location.reload();
                                        });
                                    }
                                    else {
                                        $.notify({
                                            icon: 'fa fa-exclamation-circle',
                                            message: response.message
                                        });
                                    }
                                },
                                error: function (e) {
                                    $.notify({
                                        icon: 'fa fa-exclamation-circle',
                                        message: 'Ha ocurrido un error procesando su solicitud!'
                                    });
                                },
                                complete: function () {
                                    self.CargandoSolicitud(false);
                                }
                            }
                        );
                    }
                })
            } else {
                alert("El checkbox con valor " + $(this).val() + " ha sido deseleccionado");
            }
        });

        function IndexEnvio() {
            const self = this;

            self.FinalizarChecked = ko.observable(false);

            self.FinalizarChecked.subscribe(function (it) {
                alert(it);
            });

            self.Rechazar = function (data, event, id) {
                console.log(id);
            }
        }
    </script>
}