@model MandaditosExpress.Models.Motorizado

@{
    ViewBag.Title = "Detalles";
}

@Styles.Render("~/Plugin/switches")

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Motorizados</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a>Personas</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Motorizados")">Motorizados</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Detalles</strong>
            </li>
        </ol>
    </div>
</div>

<body>
    <div class="container">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-md-12">
                    <div class="ibox ">
                        <div class="ibox-content align-items-center">

                            <div>
                                <h4><i class="fa fa-info-circle"></i> Información detallada del motorizado</h4>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.EsAfiliado)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.EsAfiliado)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.EstadoDeAfiliado)
                                    </dt>

                                    <dd @using MandaditosExpress.Models.Enum>
                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Afiliado)
                                        {
                                            <span class="badge badge-success">Afiliado</span>
                                        }
                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Solicitud)
                                        {
                                            <span class="badge badge-warning">Solicitud</span>
                                        }

                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Denegado)
                                        {
                                            <span class="badge badge-danger">Denegado</span>
                                        }

                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.NoAplica)
                                        {
                                            <span class="badge badge-secondary">No Aplica</span>
                                        }

                                    </dd>

                                    @if (Model.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Afiliado)
                                    {
                                        <dt>
                                            @Html.DisplayNameFor(model => model.FechaDeAfiliacion)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaDeAfiliacion)
                                        </dd>
                                    }


                                    @if (Model.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Denegado)
                                    {
                                        <dt>
                                            @Html.DisplayNameFor(model => model.FechaRechazoAfiliacion)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.FechaRechazoAfiliacion)
                                        </dd>
                                    }

                                    <dt>
                                        @Html.DisplayNameFor(model => model.EstadoDelMotorizado)
                                    </dt>

                                    <dd>
                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeMotorizadoEnum.Inactivo)
                                        {
                                            <span class="badge badge-secondary">Inactivo</span>
                                        }
                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeMotorizadoEnum.Activo)
                                        {
                                            <span class="badge badge-success">Activo</span>
                                        }

                                        @if (Model.EstadoDeAfiliado == (short)EstadoDeMotorizadoEnum.Ocupado)
                                        {
                                            <span class="badge badge-warning">Ocupado</span>
                                        }

                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.CorreoElectronico)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.CorreoElectronico)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.PrimerNombre)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.PrimerNombre)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.SegundoNombre)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.SegundoNombre)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.PrimerApellido)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.PrimerApellido)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.SegundoApellido)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.SegundoApellido)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Telefono)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Telefono)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Foto)
                                    </dt>

                                    <dd>
                                        @if (Model.Foto != null)
                                        {
                                            @Html.DisplayImage(Model.Foto)
                                        }
                                        else
                                        {
                                            <img src="~/Images/default_profile.png" class="img-circle" height="40" width="40" />
                                        }
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Sexo)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Sexo)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Direccion)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Direccion)
                                    </dd>

                                    @if (Model.Cedula != null)
                                    {
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Cedula)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Cedula)
                                        </dd>
                                    }

                                    @if (Model.VelocidadDeConexionId != null)
                                    {
                                        <dt>
                                            @Html.DisplayNameFor(model => model.VelocidadDeConexionId)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.VelocidadDeConexion.Descripcion)
                                        </dd>
                                    }

                                    @if (Model.DisponibilidadId != null)
                                    {
                                        <dt>
                                            @Html.DisplayNameFor(model => model.DisponibilidadId)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Disponibilidad.Descripcion)
                                        </dd>
                                    }

                                    <dt>
                                        @Html.DisplayNameFor(model => model.FechaIngreso)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.FechaIngreso)
                                    </dd>

                                </dl>
                            </div>

                        </div>

                        <div class="ibox-footer">
                            <div class="col-md-12">
                                @Html.ActionLink(" Regresar", "Index", null, new { @class = "btn btn-primary fa fa-arrow-left" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/switch")
}