@model IEnumerable<MandaditosExpress.Models.Motorizado>

@{
    ViewBag.Title = "Motorizados";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Clientes</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a>Personas</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Motorizados</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="table-responsive">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Lista de Motorizados</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row col-lg-12">
                        <p>
                            <a class="btn btn-success float-left" href="@Url.Action("Create","Motorizados")"><i class="fa fa-plus"></i> Agregar</a>
                        </p>
                    </div>
                    <table class="table table-bordered table-hover">
                        <thead id="thead">
                            <tr class="bg-primary">
                                <th>
                                    @Html.DisplayNameFor(model => model.EsAfiliado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstadoDeAfiliado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaDeAfiliacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaIngreso)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EstadoDelMotorizado)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NombreCompleto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Foto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sexo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cedula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FechaIngreso)
                                </th>
                                <th>Opciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="gradeX">
                                    <td>
                                        @if (item.EsAfiliado)
                                        {
                                            <span class="badge badge-warning">Afiliado</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-success">Empresarial</span>
                                        }
                                    </td>
                                    <td @using MandaditosExpress.Models.Enum>
                                        @if (item.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Afiliado)
                                        {
                                            <span class="badge badge-success">Afiliado</span>
                                        }
                                        @if (item.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Solicitud)
                                        {
                                            <span class="badge badge-warning">Solicited</span>
                                        }

                                        @if (item.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.Denegado)
                                        {
                                            <span class="badge badge-danger">Denegado</span>
                                        }

                                        @if (item.EstadoDeAfiliado == (short)EstadoDeAfiliadoEnum.NoAplica)
                                        {
                                            <span class="badge badge-secondary">No Aplica</span>
                                        }

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaDeAfiliacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaIngreso)
                                    </td>
                                    <td>
                                        @if (item.EstadoDelMotorizado)
                                        {
                                            <span class="badge badge-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-warning">Inactivo</span>
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CorreoElectronico)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreCompleto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Telefono)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Foto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sexo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Direccion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaIngreso)
                                    </td>
                                    <td style="white-space:nowrap;">
                                        <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-pencil" title="Editar"></i></a>
                                        <a class="btn btn-success" href="@Url.Action("Details", new { id = item.Id })"><i class="fa fa-info-circle" title="Detalles"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot id="foot">
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/dataTablesStyles")
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {

            $('.table').DataTable({
                pageLength: 25,
                scrollX: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'excel' },
                    { extend: 'pdf' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ],
                language: {
                    search: "Buscar: ",
                    lengthMenu: "Mostrar _MENU_ registros por página",
                    zeroRecords: "No se encontró nada, lo siento",
                    info: "Mostrando Página _PAGE_ de _PAGES_",
                    infoEmpty: "No hay registros disponibles",
                    infoFiltered: "(filtrado de _MAX_ registros en total)",
                    paginate: {
                        first: "Primero",
                        last: "Último",
                        next: "Siguiente",
                        previous: "Anterior"
                    },
                    buttons: {
                        copy: "Copiar",
                        copySuccess: {
                            1: "Copiada 1 fila al portapapeles",
                            _: "Copiadas %d filas al portapapeles"
                        },
                        copyTitle: "Copiar al portapapeles",
                        excel: "Excel",
                        pdf: "PDF",
                        print: "Imprimir"
                    }
                }//fin del lenguaje

            });//fin del DataTable
        });//fin del ready

    </script>
}
