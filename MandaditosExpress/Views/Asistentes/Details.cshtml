@model MandaditosExpress.Models.Asistente

@{
    ViewBag.Title = "Detalle del Asistente";
}

@Styles.Render("~/Plugin/switches")

<body>

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Detalle del cliente</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Catálogos</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "Clientes")">Clientes</a>
                </li>
                <li class="active breadcrumb-item">
                    <strong>Detalles</strong>
                </li>
            </ol>
        </div>
    </div>


    <div class="container">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-md-12">
                    <div class="ibox ">
                        <div class="ibox-content align-items-center">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4><i class="fa fa-info-circle"></i> Información detallada del asistente</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="row">
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.FechaIngreso)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.FechaIngreso)
                                            </dd>
                                        </div>

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <dt>
                                                    @Html.DisplayNameFor(model => model.EstadoDeAsistente)
                                                </dt>

                                                <dd>
                                                    @Html.DisplayFor(model => model.EstadoDeAsistente)
                                                </dd>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.FechaDeBaja)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.FechaDeBaja)
                                            </dd>
                                        </div>

                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.CorreoElectronico)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.CorreoElectronico)
                                            </dd>
                                        </div>
                                    </div>

                                    <div class="row">

                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.PrimerNombre)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.PrimerNombre)
                                            </dd>
                                        </div>

                                        <div class="col-md-3 ">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.SegundoNombre)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.SegundoNombre)
                                            </dd>
                                        </div>

                                        <div class="col-md-3 ">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.PrimerApellido)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.PrimerApellido)
                                            </dd>
                                        </div>

                                        <div class="col-md-3 ">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.SegundoApellido)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.SegundoApellido)
                                            </dd>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Telefono)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.Telefono)
                                            </dd>
                                        </div>
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Foto)

                                            </dt>

                                            <dd>
                                                @if (Model.Foto != null)
                                                {
                                                    @Html.DisplayImage(Model.Foto)
                                                }
                                                else
                                                {
                                                    <img src="~/Images/default_profile.png" class="img-circle" height="40" width="40" />
                                                }
                                            </dd>
                                        </div>
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Sexo)
                                            </dt>
                                            <dd>
                                                @Html.DisplayFor(model => model.Sexo)
                                            </dd>
                                        </div>
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Direccion)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Direccion)
                                            </dd>

                                        </div>
                                        <div class="col-md-3">
                                            <dt>
                                                @Html.DisplayNameFor(model => model.Cedula)
                                            </dt>

                                            <dd>
                                                @Html.DisplayFor(model => model.Cedula)
                                            </dd>
                                        </div>

                                    </div>
                                </div>
                            }
                        </div>
                        <div class="ibox-footer">
                            <div class="col-md-12">
                                @Html.ActionLink(" Regresar", "Index", null, new { @class = "btn btn-primary fa fa-arrow-left" })
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/switch")
}
