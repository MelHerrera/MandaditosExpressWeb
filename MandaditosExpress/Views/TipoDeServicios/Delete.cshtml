@model MandaditosExpress.Models.TipoDeServicio

@{
    ViewBag.Title = "Eliminar Tipo de Servicio";
}

    <div class="modal fade" id="deleteModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">Close</span>
                    </button>
                    <h4 class="modal-title">Author Delete Confirmation</h4>
                </div>
                <div class="modal-body">
                    <h3>Are you sure you want to delete this author?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.DescripcionTipoDeServicio)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DescripcionTipoDeServicio)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.EstadoTipoDeServicio)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.EstadoTipoDeServicio)
                            </dd>
                        </dl>
                    </div>
                    <div class="modal-footer">
                        @using (Html.BeginForm("Delete", "TipoDeServicios", FormMethod.Post,
                        new {/* data_bind = "submit: deleteAuthor"*/ }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-actions">
                                <input type="submit" value="Delete" class="btn btn-danger" />
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close </button>
                            </div>
                        }
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>