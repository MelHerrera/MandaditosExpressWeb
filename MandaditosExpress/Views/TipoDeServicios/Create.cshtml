@model MandaditosExpress.Models.TipoDeServicio


@{
    ViewBag.Title = "Agregar tipo de servicio";
}

<body>
    @Styles.Render("~/Plugin/switches")


    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Tipos De Servicio</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
                </li>
                <li class="breadcrumb-item">
                    <a>Catálogos</a>
                </li>
                <li class="breadcrumb-item">
                    <a href="@Url.Action("Index")"> Tipos de servicios</a>
                </li>
                <li class="active breadcrumb-item">
                    <strong>Agregar</strong>
                </li>
            </ol>
        </div>
    </div>


    <div class="container">
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-md-12">
                    <div class="ibox ">
                        <div class="ibox-content align-items-center">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4><i class="fa fa-info-circle"></i> Ingrese la información del Tipo de servicio.</h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="row">
                                        <div class="col-md-6">
                                            @Html.LabelFor(model => model.DescripcionTipoDeServicio, htmlAttributes: new { @class = "control-label" })
                                            <div class="form-group">
                                                @Html.EditorFor(model => model.DescripcionTipoDeServicio, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.DescripcionTipoDeServicio, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-md-3">
                                            @Html.LabelFor(model => model.EstadoTipoDeServicio, htmlAttributes: new { @class = "control-label" })
                                            <div class="form-group">
                                                <div class="checkbox">
                                                    @*@Html.EditorFor(model => model.Estado)*@
                                                    @Html.ValidationMessageFor(model => model.EstadoTipoDeServicio, "", new { @class = "text-danger" })

                                                    <input type="checkbox" value="true" name="EstadoTipoDeServicio" checked hidden>
                                                    <input type="checkbox" data-toggle="switchbutton" value="true" data-onstyle="info" name="EstadoTipoDeServicio" disabled checked>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Guardar" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <div class="ibox-footer">
                            <div class="col-md-12">
                                @Html.ActionLink(" Regresar", "Index", null, new { @class = "btn btn-primary fa fa-arrow-left" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


@section Scripts{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/plugins/switch")


  
    }