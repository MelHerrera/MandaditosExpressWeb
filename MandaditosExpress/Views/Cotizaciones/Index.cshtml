@model IEnumerable<MandaditosExpress.Models.Cotizacion>

@{
    ViewBag.Title = "Cotizaciones";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Cotizaciones</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Cotizaciones</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="table-responsive">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Lista de Cotizaciones Vigentes</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row mb-2">
                        <div class="col-md-12">
                            <a class="btn btn-success float-left" href="@Url.Action("Create","Cotizaciones")"><i class="fa fa-plus"></i> Realizar Cotización</a>
                        </div>
                    </div>
                    @if (Model.Count() > 0)
                    {
                        <div class="align-items-center">
                            <div class="row justify-content-center">
                                @foreach (var item in Model)
                                {
                                    <div class="card w-25 my-1 mx-2">
                                        <h5 class="badge badge-danger text-white align-self-end p-1 m-2" style="position:absolute">Validez: @item.FechaDeValidez</h5>
                                        <img class="card-img-top border-bottom" src="~/Images/card-header.jpg" alt="Card image cap">
                                        <div class="card-body p-1">
                                            <h5 class="card-title font-weight-bold p-1 m-0">@item.DescripcionDeCotizacion</h5> 
                                            <small class="text-muted">
                                                @if (item.LugarDestino != null)
                                                {
                                                    if (item.LugarDestino.Direccion != null)
                                                    {
                                                        @item.LugarDestino.Direccion
                                                    }
                                                }
                                            </small>

                                            <div class="row no-margins">
                                                <div class="col-6 align-items-center">
                                                    <span class="mr-1 sparkline">
                                                    </span>
                                                </div>
                                                <div class="col-6 align-items-center">
                                                    <div class="mb-1 align-items-center">
                                                        <div class="input-group h2">
                                                            <h2 class="font-weight-bold ">
                                                                C$
                                                                <span class="text-danger mr-2">@item.MontoTotal</span>
                                                            </h2>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            @if (item.DistanciaOrigenDestino > 0)
                                            {
                                                <small class="text-black-50 mt-2">
                                                    @item.DistanciaOrigenDestino Kilometros
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-black-50 mt-2">
                                                    Monto de Dinero: C$ @item.MontoDeDinero
                                                </small>
                                            }

                                            <div class="mt-2">
                                                @if (!User.IsInRole("Admin"))
                                                {
                                                <a class="btn-success btn" href="@Url.Action("Create", "Envios",new { CotizacionId = item.Id})">Solicitar Envio</a>
                                                }

                                            </div>
                                            <small><i class="fa fa-calendar"></i> @item.FechaDeLaCotizacion</small>

                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning alert-Empty" role="alert">
                            Se encontraron 0 Cotizaciones vigentes <a href="@Url.Action("Create")" class="alert-link">Click aqui</a>. Para Agregar una.
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/plugins/sparkline")

    <script type="text/javascript">
        $(document).ready(function () {
            InicializarGrafico();
        });//fin del ready


        function InicializarGrafico() {

            var values = [5, 6, 7, 5, 13, 7, 6, 7, 6, 4, 7];

            var range_map = $.range_map({
                '7:': 'green',
            });

            // Draw a sparkline for the #sparkline element
            $('.sparkline').sparkline(values, {
                type: "bar",
                barWidth: 10,
                height: 60,
                barColor: '#0083CD',
                colorMap: range_map,
                chartRangeMax: 12
            });
        }

    </script>
}
