@model IEnumerable<MandaditosExpress.Models.Cliente>

@{
    ViewBag.Title = "Clientes";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Clientes</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Clientes</strong>
            </li>
        </ol>
    </div>
</div>


@if (Model.Count() > 0)
{
    <div class="align-items-center pb-lg-4">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="card w-25 my-1 mx-2">

                    <div class="contact-box center-version">


                        <a href="#">
                            @if (item.Foto != null)
                            {
                                @Html.DisplayImage(item.Foto)
                            }
                            else
                            {
                                <img src="~/Images/default_profile.png" class="img-circle" height="40" width="40" />
                            }


                            <h4 class="m-b-xs"><strong>@item.NombreCompleto</strong></h4>

                            <div class="font-bold">@item.CorreoElectronico</div>
                            <address class="m-t-md">
                                <strong>@item.Direccion</strong>
                                @*<br>
                                    795 Folsom Ave, Suite 600<br>
                                    San Francisco, CA 94107*@
                                <br>
                                <small>Cel. @item.Telefono</small>
                            </address>

                        </a>
                        <div class="contact-box-footer">
                            <div class="m-t-xs btn-group">
                                <a class="btn btn-warning" href="@Url.Action("Edit", new { id = item.Id })"><i class="fa fa-pencil" title="Editar"></i></a>
                                <a class="btn btn-success" href="@Url.Action("Details", new { id = item.Id })"><i class="fa fa-info-circle" title="Detalles"></i></a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-Empty" role="alert">
        Se encontraron 0 clientes vigentes <a href="@Url.Action("Create")" class="alert-link">Click aqui</a>. Para Agregar una.
    </div>
}
