@{
    ViewBag.Title = "Confirmación de correo electrónico";
    Layout = null;
}

@Styles.Render("~/Content/bootstrap")
@Styles.Render("~/font-awesome/css")
@Styles.Render("~/Content/site/confirmarcorreo")

<div class="main">
    <section class="sign-in">
        <div class="container">
            <div class="register">
                <div class="signin-content">
                    <div class="signin-form">
                        <h3 class="form-title"><strong>@ViewBag.Title.</strong></h3>

                        <div>
                            <p>
                                Gracias por confirmar tu correo electrónico. 
                                @Html.ActionLink("Haga clic aquí para iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                            </p>
                        </div>
                        <div class="signin-image">
                            <figure><img src="~/Images/Done.png" alt="sing up image"></figure>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}


