@model MandaditosExpress.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "¿Olvidó su contraseña?";
    Layout = null;
}

@Styles.Render("~/Content/bootstrap")
@Styles.Render("~/font-awesome/css")
@Styles.Render("~/Content/site/forgotpass")

<div class="main">
    <section class="sign-in">
        <div class="container">
            <div class="register">
                <div class="signin-content">
                    <div class="signin-form">
                        <h3 class="form-title"><strong>@ViewBag.Title</strong></h3>
                        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "register-form", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <h4 class="form-title">Escriba su correo electrónico.</h4>

                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="Email"><i class="fa fa-envelope"></i></label>
                                        <input type="text" name="Email" id="your_name" placeholder="Correo Electronico" />
                                    </div>
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <br />
                            <div class="form-group form-button">
                                <button type="submit" class="btn btn-success">Restablecer</button>
                            </div>
                        }
                    </div>
                    <div class="signin-image">
                        <figure><img src="~/Images/Login.png" alt="sing up image"></figure>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
}

