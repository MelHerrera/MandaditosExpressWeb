@model IEnumerable<MandaditosExpress.Models.Cliente>
@{
    ViewBag.Title = "Buscar Clientes";
}


<link href="~/Content/plugins/datetimepicker/bootstrap-datetimepicker.min.css" rel="stylesheet" />

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Clientes</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "HomeUser")">Inicio</a>
            </li>
            <li class="breadcrumb-item">
                <a>Busquedas</a>
            </li>
            <li class="active breadcrumb-item">
                <strong>Búsqueda de Clientes</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="table-responsive">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Lista de Clientes</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("BuscarClientes", "Consultas", FormMethod.Post))
                    {
                        <div class="form-row align-items-center mb-3">
                            <label for="inputdesde">Fecha Desde</label>
                            <div class="col-sm-3 my-1">
                                <div class="input-group">
                                    <div class='col-md-10 input-group'>
                                        <input type="date" name="FechaDesde" value="@ViewBag.FechaDesde" class="form-control" id="inputdesde" required />
                                    </div>
                                </div>
                            </div>
                            <label for="inputhasta">Fecha Hasta</label>
                            <div class="col-sm-3 my-1">
                                <div class="input-group">
                                    <input type="date" name="FechaHasta" value="@ViewBag.FechaHasta" class="form-control" id="inputhasta" required />
                                </div>
                            </div>
                            <div class="col-auto my-1">

                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <button type="submit" class="btn btn-success"><i class="fa fa-search btnconsul"></i> Consultar</button>

                            </div>
                        </div>
                        <div class="row align-items-center">

                            <table class="table">
                                <thead id="thead">
                                    <tr class="bg-primary">

                                        <th>@Html.DisplayNameFor(model => model.EsEmpresa)</th>
                                        <th>@Html.DisplayNameFor(model => model.NombreDeLaEmpresa)</th>
                                        <th>@Html.DisplayNameFor(model => model.RUC)</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.FechaIngreso)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.CorreoElectronico)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.NombreCompleto)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Telefono)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Foto)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Sexo)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Direccion)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Cedula)
                                        </th>
                                        <th>Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr class="gradeX">
                                            <td>
                                                @if (item.EsEmpresa)
                                                {
                                                    <span class="badge badge-success">Empresa</span>}
                                                else
                                                {
                                                    <span class="badge badge-warning">Persona</span>
                                                }
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreDeLaEmpresa)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RUC)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.FechaIngreso)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CorreoElectronico)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NombreCompleto)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Telefono)
                                            </td>
                                            <td>
                                                @if (item.Foto != null)
                                                {
                                                    @Html.DisplayImage(item.Foto)
                                                }
                                                else
                                                {
                                                    <img src="~/Images/default_profile.png" class="img-circle" height="40" width="40" />
                                                }

                                                @*@Html.DisplayFor(modelItem => item.Foto)*@
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sexo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Direccion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cedula)
                                            </td>
                                            <td style="white-space:nowrap;">
                                                <a class="btn btn-warning"><i class="fa fa-pencil" title="Editar"></i></a>
                                                <a class="btn btn-success"><i class="fa fa-info-circle" title="Detalles"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>